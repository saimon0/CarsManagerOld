{% extends 'base.html.twig' %}

{% block title %}Hello MainController!{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('app_css') }}
{% endblock %}

{% block head %}
    <head>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    </head>
{% endblock %}

{% block body %}
    <div class="container-fluid" id="main-container">
        <h3>Cars in database</h3>
        <p id="display-info"> This page shows all cars which are currently persist in database</p>
        <div class="container-fluid" id="div-display-cars">
            <table class="table table-bordered">
                <thead>
                <tr>
                    <th>ID</th>
                    <th>Mark</th>
                    <th>Model</th>
                    <th>Year of production</th>
                    <th>Engine type</th>
                    <th>Engine capacity</th>
                    <th>VIN number</th>
                </tr>
                </thead>
                <tbody>
                {% for element in allCars %}
                <tr>
                    <td>{{ element.id }}</td>
                    <td>{{ element.mark }}</td>
                    <td>{{ element.model }}</td>
                    <td>{{ element.yearProd }}</td>
                    <td>{{ element.engineType }}</td>
                    <td>{{ element.engineCapacity }}</td>
                    <td>{{ element.vin }}</td>
                </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        <a href="/main"><button type="button" class="btn btn-primary" id="add-car-btn">Return</button></a>
    </div>
    {% block javascripts %}
    {% endblock %}
{% endblock %}
